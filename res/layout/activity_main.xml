<?xml version="1.0" encoding="utf-8"?>

<com.tepav.reader.helpers.slidingmenu.SlidingMenu
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Left Menu -->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/left_menu_background_koyu"
            android:orientation="vertical">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/action_bar_height"
                        android:background="@color/left_menu_background_acik">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/tvLeftMenuHeader"
                      android:text="@string/tepav"
                      android:textStyle="bold"
                      android:textSize="@dimen/tepav_header_font_size"
                      android:layout_centerInParent="true"
                      android:textColor="@color/tepav_siyahi"/>
        </RelativeLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/left_menu_background_koyu"/>

        <ListView
                android:id="@+id/lvLeftMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <!-- This acts as Actionbar -->
        <RelativeLayout
                android:id="@+id/actionBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_height"
                android:background="@color/beyaz">

            <RelativeLayout android:layout_width="@dimen/action_bar_toggle_area" android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/button_menu">
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/content_description"
                        android:layout_margin="10dp"
                        android:src="@drawable/menu_icon"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"/>

            </RelativeLayout>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/tvActionBarHeader"
                      android:layout_margin="5dp"
                      android:text="@string/tepav"
                      android:textStyle="bold"
                      android:textSize="@dimen/tepav_header_font_size"
                      android:textColor="@color/tepav_siyahi"
                      android:layout_centerInParent="true"/>

        </RelativeLayout>

        <!-- This is where fragment will show up -->
        <FrameLayout
                android:id="@+id/activity_main_content_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>

</com.tepav.reader.helpers.slidingmenu.SlidingMenu>