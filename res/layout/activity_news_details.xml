<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="60dp"
                    android:layout_alignParentTop="true"
                    android:id="@+id/llHeader">

        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/tvHeader"
                android:text="@string/tepav"
                android:textStyle="bold"
                android:textSize="@dimen/tepav_header_font_size"
                android:textColor="@color/tepav_siyahi"
                android:layout_centerInParent="true"/>

    </RelativeLayout>

    <View android:layout_width="match_parent" android:layout_height="@dimen/gradient_height"
          android:id="@+id/gradient_upper"
          android:layout_below="@+id/llHeader"
          android:background="@drawable/gradient_upper"/>

    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/gradient_upper"
                android:layout_above="@+id/rlFooter">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:id="@+id/rlNewsDetailNewsHeader">


        </RelativeLayout>
    </ScrollView>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp"
                    android:background="@color/tepav_siyahi"
                    android:id="@+id/rlFooter"
                    android:layout_alignParentBottom="true">

        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:orientation="horizontal"
                      android:layout_centerHorizontal="true">

            <LinearLayout
                    android:id="@+id/llFooterLike"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/like"
                          android:layout_gravity="center_vertical"
                          android:textColor="@color/beyaz"
                          android:textSize="@dimen/footer_button_font_size"/>

                <ImageView
                        android:contentDescription="@string/like"
                        android:layout_width="@dimen/footer_button_size"
                        android:layout_height="@dimen/footer_button_size"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_action_favorite_light"/>

            </LinearLayout>

            <View android:layout_width="30dp" android:layout_height="50dp"
                  android:background="@android:color/transparent"/>

            <LinearLayout
                    android:id="@+id/llFooterShare"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/share"
                          android:layout_gravity="center_vertical"
                          android:textColor="@color/beyaz"
                          android:textSize="@dimen/footer_button_font_size"/>

                <ImageView
                        android:contentDescription="@string/share"
                        android:layout_width="@dimen/footer_button_size"
                        android:layout_height="@dimen/footer_button_size"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_action_share_light"/>

            </LinearLayout>

            <View android:layout_width="30dp" android:layout_height="50dp"
                  android:background="@android:color/transparent"/>

            <LinearLayout
                    android:id="@+id/llFooterAddToList"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/add_to_list"
                          android:layout_gravity="center_vertical"
                          android:textColor="@color/beyaz"
                          android:textSize="@dimen/footer_button_font_size"/>

                <ImageView
                        android:contentDescription="@string/add_to_list"
                        android:layout_width="@dimen/footer_button_size"
                        android:layout_height="@dimen/footer_button_size"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_action_copy_light"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>