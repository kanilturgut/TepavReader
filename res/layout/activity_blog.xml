<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:swipe="http://schemas.android.com/apk/res-auto"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tvBlogHeader"
              android:layout_margin="5dp"
              android:text="tepav"
              android:textStyle="bold"
              android:textSize="36sp"
              android:textColor="#31404D"
              android:layout_alignParentTop="true"
              android:layout_centerHorizontal="true"/>

    <com.tepav.reader.helpers.WrapContentHeightViewPager
            android:id="@+id/newsPager"
            android:layout_below="@+id/tvBlogHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <com.tepav.reader.helpers.pagerindicator.CirclePageIndicator
            android:id="@+id/circleIndicatorOfBlogPager"
            android:layout_above="@+id/swipeListViewOfBlog"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <com.tepav.reader.helpers.swipelistview.SwipeListView
            android:id="@+id/swipeListViewOfBlog"
            android:layout_below="@+id/newsPager"
            android:listSelector="#00000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            swipe:swipeFrontView="@+id/frontOfBlog"
            swipe:swipeBackView="@+id/backOfBlog"
            swipe:swipeActionLeft="reveal"
            swipe:swipeActionRight="reveal"
            swipe:swipeMode="both"
            swipe:swipeCloseAllItemsWhenMoveList="true"
            swipe:swipeOpenOnLongPress="true"
            swipe:swipeAnimationTime="100"/>


</RelativeLayout>