<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:swipe="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                   android:scaleType="fitXY"
                   android:contentDescription="@string/content_description"
                   android:src="@drawable/blur_background"/>


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/tvFavorites"
                  android:layout_alignParentTop="true"
                  android:layout_alignParentLeft="true"
                  android:text="@string/Research_And_Publications"
                  android:textSize="30sp"
                  android:singleLine="true"
                  android:textColor="@color/favorites_font_color"
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="30dp"
                  android:layout_marginBottom="30dp"/>


        <com.tepav.reader.helpers.swipelistview.SwipeListView
                android:layout_below="@+id/tvFavorites"
                android:id="@+id/swipeListViewOfPublication"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                swipe:swipeFrontView="@+id/frontOfPublication"
                swipe:swipeBackView="@+id/backOfPublication"
                swipe:swipeActionLeft="reveal"
                swipe:swipeActionRight="reveal"
                swipe:swipeMode="both"
                swipe:swipeDrawableChecked="@drawable/choice_selected"
                swipe:swipeDrawableUnchecked="@drawable/choice_unselected"
                swipe:swipeCloseAllItemsWhenMoveList="true"
                swipe:swipeOpenOnLongPress="true"
                swipe:swipeAnimationTime="100"/>
    </RelativeLayout>

    <!-- Loading Scren -->
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:id="@+id/rlLoading"
                    android:background="@color/gri">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:text="@string/loading"/>

    </RelativeLayout>
    

</FrameLayout>